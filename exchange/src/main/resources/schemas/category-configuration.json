{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "displayName": {
      "type": "string",
      "maxLength": 512
    },
    "tagKey": {
      "type": "string",
      "description": "The tag key, should be a kebab cased string",
      "maxLength": 512,
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "assetTypeRestrictions": {
      "type": "array",
      "maxItems": 100,
      "items": {
        "type": "string"
      }
    },
    "acceptedValues": {
      "type": "array",
      "maxItems": 500,
      "items": {
        "type": "string"
      }
    }
  },
  "anyOf": [
    { "required": ["displayName"] },
    { "required": ["tagKey"] }
  ]
}
