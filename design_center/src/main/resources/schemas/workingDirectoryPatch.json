{
  "title": "Working Directory",
  "type": "object",
  "properties": {
    "mergeStatus": {
      "title": "Merge Status",
      "enum": ["MERGED", "CONFLICTING", "ALREADY_UP_TO_DATE"]
    },
    "workingDirectoryStatus": {
      "title": "Working directory status",
      "type": "object",
      "properties": {
        "added": {
          "description": "Files that were added",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "modified": {
          "description": "Files that were modified",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "deleted": {
          "description": "Files that were deleted",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "conflicts": {
          "description": "Files that are in conflict",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "type": {
                "enum": ["DELETED_BY_THEM", "DELETED_BY_US", "BOTH_ADDED", "BOTH_MODIFIED"]
              }
            }
          }
        }
      }
    }
  }
}
