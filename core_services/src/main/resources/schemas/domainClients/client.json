{
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://cs.anypoint.mulesoft.com/client.json",
  "properties": {
    "client_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "client_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "client_secret": {
      "type": "string",
      "minLength": 10,
      "maxLength": 255
    },
    "grant_types": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["implicit", "authorization_code", "refresh_token", "client_credentials"]
      },
      "minItems": 1
    },
    "redirect_uris": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 0
    }
  },
  "required": ["redirect_uris"]
}
